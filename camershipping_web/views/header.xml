<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <template id="links" name="body page" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <!--stylesheet links-->
            <link href="/camershipping_web/static/src/css/footer.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/header.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/tracking.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/cart.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/home.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/store.css" rel="stylesheet"/>
            <link href="/camershipping_web/static/src/css/expedition.css" rel="stylesheet"/>

            <!-- Icon Font Stylesheet -->
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet"/>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet"/>
             <!-- Libraries -->
            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"/>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous"/>
        </xpath>

         <xpath expr="." position="inside">
             <script src="https://cdn.jsdelivr.net/gh/cferdinandi/smooth-scroll/dist/smooth-scroll.polyfills.min.js"></script>
             <script src="/camershipping_web/static/src/js/scroll.js" type="text/javascript"></script>
             <script src="/camershipping_web/static/src/js/expedition.js" type="text/javascript"></script>
             <script src="/camershipping_web/static/src/js/cart.js" type="text/javascript"></script>
             <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

         </xpath>
     </template>

    <template id="header" name="header" inherit_id="website.layout">
        <xpath expr="//header//nav" position="replace">
             <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
                <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5" style="background:#ff7200;">
                    <h2 class="mb-2 text-white">LOGISTICA</h2>
                </a>
                <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse" style="margin-left:300px">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">
                        <a href="/" class="nav-item nav-link active">Home</a>
                        <a href="/store" class="nav-item nav-link">Store</a>
                        <a href="/expedition" class="nav-item nav-link">Expedition</a>
                        <a href="/tracking" class="nav-item nav-link">Tracking</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Company</a>
                            <div class="dropdown-menu fade-up m-0">
                                <a href="#about" class="dropdown-item" style="color:#ff7200;">About</a>
                                <a href="#service" class="dropdown-item" style="color:#ff7200;">Service</a>
                                <a href="#" class="dropdown-item" style="color:#ff7200;">News</a>
                                <a href="#" class="dropdown-item" style="color:#ff7200;">Contact</a>
                                <a href="/cart-shop" class="dropdown-item" style="color:#ff7200;">Cart</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    <b>
                                         <span t-esc="user_id.name" />
                                         <span class="caret"></span>
                                     </b>
                                </a>
                                <div class="dropdown-menu bg-white m-0" t-if="website.user_id != user_id">
                                    <a href="/web" class="dropdown-item" style="color:#ff7200;">My Account</a>
                                    <a t-attf-href="/web/session/logout?redirect=/" class="dropdown-item" style="color:#ff7200;">Logout</a>
                                </div>
                                <div class="dropdown-menu bg-light m-0" t-if="website.user_id == user_id">
                                    <a class="dropdown-item" href="/login" style="color:#ff7200;">
                                      <b>Connexion</b>
                                    </a>
                                </div>
                        </div>

                    </div>
                    <h4 class="m-0 pe-lg-5 d-none d-lg-block"><i class="fa fa-headphones" style="color:#ff7200;"></i>+237 699820301</h4>
                    <div class="cart-btn">
                        <a href="/cart-shop"><i id="cart" class="fas fa-shopping-cart"></i></a>
                        <span class ="cart-quantity">0</span>
                    </div>



                </div>
            </nav>
        </xpath>
    </template>


     <template id="footer" name="footer" inherit_id="website.layout">
