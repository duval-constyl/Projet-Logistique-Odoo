                            </div>

                        <!--project Image-->
                        <div class="col-md-6 col-lg-3">
                            <div class="footer-project">
                                <h3>Latest Projects</h3>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                                <a href=""><img src="/camershipping_web/static/src/img/about.jpg" alt="Image"/></a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="container footer-newsletter">
                                <p>
                                    Here you can subscribe to some of our services and campagne
                                </p>

                                    <form>
<!--                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token() "/>-->
                                         <div class="row form">
                                            <div class="col-sm-4">
                                                <input name="name" class="form-control" placeholder="Your Name"/>
                                            </div>
                                            <div class="col-sm-4">
                                                <input name="mail" class="form-control" placeholder="Your Email"/>
                                            </div>
                                            <div class="col-sm-4">
                                                <button class="btn" type="submit">Subscribe</button>
                                            </div>
                                         </div>
                                    </form>
                            </div>
               <!-- Newswletter -->

                <div class="copyright">
                    <div class="container">
                        <div class="row align-items-center">

                          <!--Copy Right-->
                            <div class="col-md-6">
                                <div class="copy-text">
                                    <p> © 2022 Copyright:<a href="#">Camer Software</a>. All Rights Reserved</p>
                                </div>
                            </div>

                            <!--Copy menu-->
                            <div class="col-md-6">
                                <div class="copy-menu">
                                    <a href="">About</a>
                                    <a href="">Terms</a>
                                    <a href="">Privacy</a>
                                    <a href="">Contact</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </xpath>
     </template>
</odoo>