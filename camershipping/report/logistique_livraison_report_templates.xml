                                            <tr>
                                                <th style="background-color:#FF5722 !important;color:#FFF !important;">Commande</th>
                                                <th style="background-color:#FF5722 !important;color:#FFF !important;">Date de la commande</th>
                                                <th style="background-color:#FF5722 !important;color:#FFF !important;">Moyen de paiement</th>
<!--                                                <th style="background-color:#FF0000 !important;color:#FFF !important;">Prix de vente</th>-->
                                            </tr>
                                        </thead>

                                        <tbody t-foreach="o. commandline_ids"
