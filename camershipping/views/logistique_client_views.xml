<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="logistique_client_view_tree" model="ir.ui.view">
        <field name="name">logistique.client.view.tree</field>
        <field name="model">logistique.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="telephone"/>
                <field name="adresse"/>
                <field name="country"/>
            </tree>
        </field>
    </record>

     <record id="logistique_client_view_kanban" model="ir.ui.view">
        <field name="name">logistique.client.view.kanban</field>
        <field name="model">logistique.client</field>
        <field name="arch" type="xml">
             <kanban class="o_kanban_mobile" sample="1">
                <field name="reference"/>
                <field name="name"/>
                 <field name="surname"/>
                <field name="mail"/>
                <field name="telephone"/>
                <field name="adresse"/>
                <field name="country"/>
                <field name="activity_state"/>
                 <field name="color"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}  oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                 <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown">
                                    <span class="fa fa-ellipsis-v"/>
                                 </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_tags_section" />
                                <ul>
                                    <li>Reference: <field name="reference" /></li>
                                    <li>Nom: <field name="name" /></li>
                                    <li>Adresse: <field name="adresse" /></li>
                                    <li>Mail: <field name="mail" /></li>
                                </ul>
                            </div>
                            <div>
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <record id="client_search" model="ir.ui.view">
            <field name="name">client.view.search</field>
            <field name="model">logistique.client</field>
            <field name="arch" type="xml">
                <search string="Client">
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="adresse"/>
                </search>
            </field>
    </record>

    <record id="logistique_client_view_form" model="ir.ui.view">
        <field name="name">logistique.client.view.form</field>
        <field name="model">logistique.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
<!--                          <label class="oe_edit_only" for="name" string="Nom Client"/>-->
                        <h1>
                            <field name="name" placeholder="Nom Client"/>
                        </h1>
                    </div>
                    <group>
                       <group>
                            <field name="surname"/>
                            <field name="mail" widget="email"/>
                            <field name="telephone" widget="phone"/>
                            <field name="adresse"/>
                        </group>
                        <group>
                            <field name="password"/>
                            <field name="confirm_password"/>
                            <field name="country"/>
                        </group>
                    </group>
                </sheet>

                 <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>


     <record id="logistique_client_action" model="ir.actions.act_window">
        <field name="name">Client</field>
        <field name="res_model">logistique.client</field>
        <field name="view_mode">kanban,form,search,tree</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Ajoutez un nouveau client
              </p>
        </field>
    </record>

    <menuitem name="Logistique"
              id="logistique_base_menu"/>

    <menuitem name="Utilisateur"
              id="logistique_user_menu"
              parent="logistique_base_menu"
              sequence="20"/>

    <menuitem name="Client"
              id="logistique_client_menu"
              parent="logistique_user_menu"
              sequence="10"
              action="logistique_client_action"/>
</odoo>