<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="logistique_blog_view_tree" model="ir.ui.view">
        <field name="name">logistique.blog.view.tree</field>
        <field name="model">logistique.blog</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="date"/>
                <field name="description"/>
                <field name="image"/>
            </tree>
        </field>
    </record>

    <record id="logistique_blog_view_form" model="ir.ui.view">
        <field name="name">logistique.blog.view.form</field>
        <field name="model">logistique.blog</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                       <group>
                            <field name="date"/>
                            <field name="title"/>
                        </group>
                        <group>
                              <field name="image" string="" widget="image"  col="120"  width="120"
                           class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image&quot;}"/>
                              <field name="description"/>
                        </group>
                    </group>
                </sheet>

                 <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                 </div>
            </form>
        </field>
    </record>

