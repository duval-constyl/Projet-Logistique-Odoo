<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="logistique_transporteur_view_tree" model="ir.ui.view">
        <field name="name">logistique.transporteur.view.tree</field>
        <field name="model">logistique.transporteur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="telephone"/>
                <field name="adresse"/>
                <field name="nationality"/>
                <field name="permis"/>
                <field name="vehicule"/>
                <field name="num_vehicule"/>
                <field name="trajet"/>
            </tree>
        </field>
    </record>

     <record id="logistique_transporteur_view_kanban" model="ir.ui.view">
        <field name="name">logistique.transporteur.view.kanban</field>
        <field name="model">logistique.transporteur</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="reference"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="telephone"/>
                <field name="adresse"/>
                <field name="nationality"/>
                <field name="permis"/>
                <field name="vehicule"/>
                <field name="num_vehicule"/>
                <field name="trajet"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">

                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('logistique.transporteur','ufile', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_tags_section" />
                                <ul>
                                    <li>Reference: <field name="reference" /></li>
                                    <li>Nom: <field name="name" /></li>
                                    <li>Adresse: <field name="adresse" /></li>
                                    <li>Mail: <field name="mail" /></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="logistique_transporteur_view_form" model="ir.ui.view">
        <field name="name">logistique.transporteur.view.form</field>
        <field name="model">logistique.transporteur</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_fonction" name="action_fonction" string="En Fonction" states="repos"
                    class="btn-primary" type="object"/>
                     <button id="button_repos" name="action_repos" string="En Repos" states="annuler"
                    class="btn-primary" type="object"/>
                     <button id="button_annuler" name="action_annuler" string="Annuler" states="repos,fonction"
                     type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="repos,fonction"/>
                </header>
               <sheet>
                   <field name="ufile" string="" widget="image"  col="120"  width="120"
                          class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image&quot;}"/>
                   <div class="oe_title">
                       <h1>
                           <field name="reference" readonly="1"/>
                       </h1>
<!--                       <label class="oe_edit_only" for="name" string="Nom Transporteur"/>-->
                        <h1>
                            <field name="name" placeholder="Nom Transporteur"/>
                        </h1>
                   </div>
                    <group>
                        <group>
                            <field name="surname"/>
                            <field name="mail" widget="email"/>
                            <field name="telephone" widget="phone"/>
                            <field name="adresse"/>
                        </group>
                        <group>
                            <field name="password"/>
                            <field name="confirm_password"/>
                            <field name="nationality"/>
                        </group>
                        <notebook>
                            <page string="Autre Information" name="vehicule">
                                <group>
                                     <field name="permis"/>
                                     <field name="vehicule"/>
                                     <field name="num_vehicule"/>
                                     <field name="trajet"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>

                 <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>

            </form>
        </field>
    </record>

     <record id="logistique_transporteur_view_search" model="ir.ui.view">
        <field name="name">logistique.transporteur.view.search</field>
        <field name="model">logistique.transporteur</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="mail"/>
                <field name="telephone"/>
                <field name="adresse"/>
                <field name="nationality"/>
            </search>
        </field>
    </record>

    <record id="logistique_transporteur_action" model="ir.actions.act_window">
        <field name="name">Transporteur</field>
        <field name="res_model">logistique.transporteur</field>
        <field name="view_mode">kanban,form,tree,search</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Ajoutez un nouveau Transporteur
              </p>

        </field>
    </record>

    <menuitem name="Logistique"
              id="logistique_base_menu"/>

    <menuitem name="Utilisateur"
              id="logistique_user_menu"
              parent="logistique_base_menu"
              sequence="20"/>

    <menuitem name="Transporteur"
              id="logistique_transporteur_menu"
              parent="logistique_user_menu"
              sequence="30"
              action="logistique_transporteur_action"/>


</odoo>